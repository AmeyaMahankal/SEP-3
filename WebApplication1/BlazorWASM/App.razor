<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            
            
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <div class="view">
                        <img class="image" src="https://content.presentermedia.com/content/animsp/00005000/5570/door_peek_out_md_nwm_v2.gif">
                        <p class="fancy-text">Login required</p>
                    </div>
                </NotAuthorized>
            </AuthorizeRouteView>
            
            
            <FocusOnNavigate RouteData="@routeData" Selector="h1"/>
        </Found>
        <NotFound>
            <PageTitle>Page Not Found</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <p role="alert">Lost</p>
            </LayoutView>
        </NotFound>
        
        
    </Router>
</CascadingAuthenticationState>



<style>
.view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  text-align: center;
}

.view .image {
  width: 400px;
  margin: 0 auto;
}

.view .fancy-text {
  text-align: center;
  font-size: 2.5em;
  color: #333;
  padding: 20px;
  background-color: #f1f1f1;
  border-radius: 10px;
  max-width: 400px;
  margin: 20px auto;
}


