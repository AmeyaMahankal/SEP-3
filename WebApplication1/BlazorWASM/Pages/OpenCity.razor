@page "/OpenCity/{id:int}"
@using Domain.Models
@using HttpClients.ClientInterfaces
@using SEP3lu
@inject IRestaurantService RestaurantService
@inject ICityService cityService
@inject NavigationManager NavMgr

<h3>OpenCity @id</h3>
<h3>@title</h3>
<h3>@desc</h3>
<img src=@imsrc/>

@if (restaurants == null)
{
    <span>Loading..</span>
}
else if (!restaurants.Any())
{
    <span>No cities found</span>
}
else
{
    <div class="users-container">
        @foreach (Restaurant restaurant in restaurants)
        {
            <div class="user-card" @onclick="@((() => NavMgr.NavigateTo($"/OpenRestaurant/{id}/{restaurant.Id}")))">
                <p>@restaurant.ImageURL</p>
            </div>
        }
        <div class="user-card" @onclick="@((() => NavMgr.NavigateTo($"/CreateRestaurant/{id}")))">
            <label>Create Restaurant</label>
        </div>
    </div>
}



@code {

    [Parameter]
    public int id { get; set; }

    private IEnumerable<City> cities;
    private IEnumerable<Restaurant> restaurants;
    private City theCity;

    private string title;
    private string desc;
    private string imsrc;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            cities = await cityService.getCities("getall");
            restaurants = await RestaurantService.getRestaurants(id);
            theCity = cities.FirstOrDefault(city => city.Id == id);

            title = theCity.Name;
            desc = theCity.Description;
            imsrc = theCity.ImageURL;
        }
        catch (Exception e)
        {
            Console.WriteLine(e);
            throw;
        }
    }




}