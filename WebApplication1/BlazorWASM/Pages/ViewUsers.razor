@page "/ViewUsers"
@attribute [Authorize("MustBeAdmin")]
@using Domain.Models
@using HttpClients.ClientInterfaces
@inject IUserService userService
@inject ICityService cityService

<h3 style="text-align: center">Overview of all users</h3>

@if (!string.IsNullOrEmpty(msg))
{
    <div>
        <span>@msg</span>
    </div>
}

@if (users == null)
{
    <span>Loading..</span>
}
else if (!users.Any())
{
    <span>No users to be found</span>
}
else
{
    <div class="users-container">
        @foreach (User user in users)
        {
            <div class="user-card">
                <label>@user.Id - @user.UserName</label>
            </div>
        }
    </div>
    
    <div class="users-container">
        @foreach (City city in cities)
        {
            <div class="user-card">
                <label>@city.Name</label>
                <img src=@city.ImageURL height=20% width=20%/>
            </div>
        }
    </div>
}


@code {
    private IEnumerable<User>? users;
    private IEnumerable<City> cities;
    
    private string msg = "";

    protected override async Task OnInitializedAsync()
    {
        msg = "";
        try
        {
            users = await userService.GetUsers("getall");
            cities = await cityService.getCities("getall");
            int stpher = 0;
        }
        catch (Exception e)
        {
            Console.WriteLine(e);
            msg = e.Message;
        }
    }
}